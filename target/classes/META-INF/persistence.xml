<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="musicPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entidades -->
        <class>utnfrc.isi.backend.entities.Artist</class>
        <class>utnfrc.isi.backend.entities.Album</class>
        <class>utnfrc.isi.backend.entities.Employee</class>
        <class>utnfrc.isi.backend.entities.Customer</class>
        <class>utnfrc.isi.backend.entities.Genre</class>
        <class>utnfrc.isi.backend.entities.MediaType</class>
        <class>utnfrc.isi.backend.entities.Playlist</class>
        <class>utnfrc.isi.backend.entities.Track</class>
        <class>utnfrc.isi.backend.entities.Invoice</class>
        <class>utnfrc.isi.backend.entities.InvoiceItem</class>
        <class>utnfrc.isi.backend.entities.PlaylistTrack</class>

        <properties>
            <!-- Conexión H2 -->
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" 
                      value="jdbc:h2:mem:database;DB_CLOSE_DELAY=-1"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- Configuración Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="none"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>